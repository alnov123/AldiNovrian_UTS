<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kisahnabi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="25dp"
                    app:srcCompat="@drawable/nuh"
                    tools:layout_editor_absoluteY="36dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="141dp"
                    android:layout_height="75dp"
                    android:layout_below="@+id/imageView"
                    android:layout_marginLeft="115dp"
                    android:text="Nabi Nuh as Usia 950 Tahun"
                    android:textSize="20sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="25dp"
                tools:layout_editor_absoluteY="36dp"
                app:srcCompat="@drawable/ibrahim" />
            <TextView
                android:id="@+id/textView1"
                android:layout_width="141dp"
                android:layout_height="75dp"
                android:layout_below="@+id/imageView2"
                android:layout_marginLeft="115dp"
                android:text="Nabi Ibrahim AS, Usia 200 Tahun "
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">
            <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="25dp"
        tools:layout_editor_absoluteY="36dp"
        app:srcCompat="@drawable/musa" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="141dp"
                android:layout_height="75dp"
                android:layout_below="@+id/imageView3"
                android:layout_marginLeft="115dp"
                android:text="Nabi Musa AS, Usia 120 Tahun "
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="25dp"
        tools:layout_editor_absoluteY="36dp"
        app:srcCompat="@drawable/isa" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="141dp"
                android:layout_height="75dp"
                android:layout_below="@+id/imageView4"
                android:layout_marginLeft="115dp"
                android:text="Nabi Isa AS, Usia 33 Tahun "
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="25dp"
        tools:layout_editor_absoluteY="36dp"
        app:srcCompat="@drawable/muhammad" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="141dp"
                android:layout_height="75dp"
                android:layout_below="@+id/imageView5"
                android:layout_marginLeft="115dp"
                android:text="Nabi Muhammad SAW, Usia 63 Tahun "
                android:textSize="20sp" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


